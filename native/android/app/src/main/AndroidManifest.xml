<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network access for daemon API communication -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Biometric authentication for app lock -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Local notifications for pending approvals -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Camera for QR scanning and photo capture -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Location for sharing with agent on request -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- Network state for connection monitoring -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Wake lock for background service -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".AegisApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Aegis"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Aegis"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="34">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Aegis"
            android:theme="@style/Theme.Aegis">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deep link for notification taps -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="aegis"
                    android:host="app" />
            </intent-filter>
        </activity>

        <!-- Foreground service for maintaining WebSocket connection -->
        <service
            android:name=".services.ConnectionService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <!-- Foreground service for location tracking -->
        <service
            android:name=".services.LocationService"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Broadcast receiver for notification approve/deny actions -->
        <receiver
            android:name=".notifications.NotificationActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.aegis.android.ACTION_APPROVE" />
                <action android:name="com.aegis.android.ACTION_DENY" />
            </intent-filter>
        </receiver>

        <!-- Home screen widget -->
        <receiver
            android:name=".widgets.AegisWidgetReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/aegis_widget_info" />
        </receiver>
    </application>
</manifest>
